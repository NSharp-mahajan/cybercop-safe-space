# Real Data API Configuration
# Copy this file to .env and fill in your actual API keys

# National Crime Records Bureau (NCRB)
# Contact: https://ncrb.gov.in/ for API access
VITE_NCRB_API_URL=https://ncrb.gov.in/api/v1
VITE_NCRB_API_KEY=your_ncrb_api_key_here

# Data.gov.in - India's Open Data Platform
# Register at: https://data.gov.in/
VITE_DATA_GOV_API_URL=https://api.data.gov.in/resource
VITE_DATA_GOV_API_KEY=your_data_gov_api_key_here

# Reserve Bank of India (RBI) - Financial Crime Data
# Request access from: https://rbi.org.in/
VITE_RBI_API_URL=https://api.rbi.org.in/v1
VITE_RBI_API_KEY=your_rbi_api_key_here

# Cyber Crime Portal - cybercrime.gov.in
# Official government portal for cyber crime
VITE_CYBER_CRIME_API_URL=https://api.cybercrime.gov.in/v1
VITE_CYBER_CRIME_API_KEY=your_cyber_crime_api_key_here

# News API - For cyber crime trend analysis
# Get your free API key from: https://newsapi.org/
VITE_NEWS_API_KEY=your_news_api_key_here

# Alternative Research APIs (Optional)
# Various research institutions and NGOs
VITE_RESEARCH_API_URL=https://research.cybersecurity.org/api
VITE_STATE_POLICE_APIS=https://api.delhipolice.gov.in,https://api.mumbaipolice.gov.in

# Fallback Configuration
# Enable fallback to demo data when APIs are unavailable
VITE_ENABLE_FALLBACK=true
VITE_DEMO_MODE=false
